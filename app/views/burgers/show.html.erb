<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @burger.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @burger.price %>
</p>

<p>
  <strong>Image:</strong>
  <%= @burger.image %>
</p>

<p>
  <strong>Nutriscore:</strong>
  <%= @burger.nutriscore %>
</p>

<p>
  <strong>Code:</strong>
  <%= @burger.code %>
</p>

<p>
  <strong>Nutriments:</strong>
  <table>
    <thead>
      <tr>
        <th>Nutrition facts</th>
        <th>Value</th>
      </tr>
    </thead>

    <tbody>
      <% @burger.nutriments.each do |nutriment| %>
        <tr>
          <td><%= nutriment[0] %></td>
          <td><%= nutriment[1] %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

